<!DOCTYPE html>
<html lang="en">
    <head>
        <meta name="viewport" content="width=device-width, initial-scale=1.0" charset="UTF-8">
        <link rel="stylesheet" href="../static/register_login.css">
        <script src="http://localhost:35729/livereload.js" rel="preload" async></script>
        <title>Registrierung / Anmeldung</title>
    </head>
    <body>
        <div class="container">
            <h1 style="color: White" id="form-title">Anmeldung</h1>
            <form action="../templates/main_menu.mustache" method="post" id="auth-form">
                <label style="color: White" for="username">Benutzername:</label>
                <input type="text" name="username" required>
                <label style="color: White" for="password">Passwort:</label>
                <input type="password" name="password" required>
                <button type="submit" id="form-button">Anmelden</button>
            </form>
                <button onclick="switchForm()" id="switch-button">Registrieren</button>
        </div>
        <script>
            let isRegister = false;
            function switchForm()
            {
                isRegister = !isRegister;
                document.getElementById('form-title').innerText = isRegister ? 'Registrieren' : 'Anmelden';
                document.getElementById('form-button').innerText = isRegister ? 'Registrieren' : 'Anmelden';
                document.getElementById('switch-button').innerText = isRegister ? 'Zur√ºck zur Anmeldung' : 'Registrieren';
            }
        </script>
    </body>
</html>